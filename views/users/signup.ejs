<% layout('/layouts/boilerplate.ejs') %>
    <body>
        <div class="row">
            <h1 class="col-6 offset-3">SignUp on Wonderlust</h1>
            <div class="col-6 offset-3">
                <form action="/signup" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input required id="username" type="text" name="username" placeholder="Enter Username"
                            class="form-control">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input required id="email" type="text" name="email" placeholder="Enter Username"
                            class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input required id="password" type="password" name="password" placeholder="Enter Password"
                            class="form-control">
                    </div>
                    <button class="btn btn-success">SignUp</button>
                </form>
            </div>
        </div>
    </body>